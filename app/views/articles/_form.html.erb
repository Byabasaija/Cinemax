
<div class="conatiner w-50 center p-5" style="margin-left: 150px">
  <div class="row">
    <div class="col">
      <h3>Create Article</h3>
    <%= form_with(model: @article, local: true, class: 'form') do |form| %>
  <div class="">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control'%>
  </div>

  <div class="form-group ">
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Image link" %>
    <%= form.url_field :image, class: 'form-control' %><br>
  </div>

  <div class=" form-group">
    <label>Category</label>
    <div class="">
      <%= form.collection_select(:category_ids, Category.all, :id, :name, {}, {:multiple => true, :class => 'form-control js-example-basic-multiple'})%>
    </div>
  </div>

  <div class="">
    <%= form.submit class: 'btn btn-danger' %>
  </div>
<% end %>
    </div>
  </div>
</div>