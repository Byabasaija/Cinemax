
<%= form_with(model: @article, local: true, class: 'form') do |form| %>
  <div class="">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class=" ">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="">
    <%= form.label 'image' %>
    <%= form.file_field :image %>
  </div>

  <div class="">
    <label>Category</label>
    <div class="">
      <<%= select_tag("category_ids[]", options_for_select(Category.all.collect { |cat| [cat.name, cat.id] }, @article.categories.collect { |cat| cat.id}), {:multiple=>true, :size=>6})%>
    </div>
  </div>

  <div class="">
    <%= form.submit %>
  </div>
<% end %>