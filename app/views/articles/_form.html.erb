
<%= form_with(model: @article, local: true, class: 'form') do |form| %>
  <div class="">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class=" ">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="">
    <%= form.label 'Image url' %>
    <%= form.text_field :image, id: 'img-url' %>
  </div>

  <div class="">
    <label>Category</label>
    <div class="">
      <%= select_tag(:category_id, options_for_select(@categories), :prompt => “Select one!”) %>
    </div>
  </div>

  <div class="">
    <%= form.submit %>
  </div>
<% end %>