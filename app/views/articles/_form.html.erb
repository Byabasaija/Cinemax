
<div class="conatiner w-50 center p-5" style="margin-left: 150px">
  <div class="row">
    <div class="col">
    <%= form_with(model: @article, local: true, class: 'form') do |form| %>
  <div class="">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control'%>
  </div>

  <div class="form-group ">
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control' %>
  </div>

  <div class="form-group" type="file">
    <%= form.label 'image' %>
    <%= form.file_field :image %>
  </div>

  <div class=" form-group">
    <label>Category</label>
    <div class="">
      <%= select_tag("category_ids[]", options_for_select(Category.all.collect { |cat| [cat.name, cat.id] }, @article.categories.collect { |cat| cat.id}), {:multiple=>true, :size=>6})%>
    </div>
  </div>

  <div class="">
    <%= form.submit class: 'btn btn-danger' %>
  </div>
<% end %>
    </div>
  </div>
</div>